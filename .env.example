# Environment Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CORS_ORIGIN=*

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/express_starter?schema=public

# API Security
API_KEY=your_super_secure_api_key_min_32_chars

# JWT Configuration
JWT_SECRET=your_ultra_secure_jwt_secret_should_be_long_and_random
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your_ultra_secure_refresh_token_secret_should_be_different
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# App Version
VERSION=0.1.0
